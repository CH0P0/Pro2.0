@page
@model Ejercicios701.Pages.Ejercicio1Model
@{
}

<!Doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Ejercicios701</title>
    <link rel="stylesheet" href="./css/Styles.css" />
</head>

<body>
    <header>
        <div>
            <img src="./media/0f43f17f-78ba-4307-a0d5-fed381c950fc.jpg" alt="miFoto" width="75" />
            <p>Guillermo Afonso Santacreu 1-DAW-A</p>
        </div>

    </header>
    <div class="container">
        <main>
		    <h1>Operaciones con números</h1>
		    <form method="post">
                @if (Request.Method == "POST") {
			        <label for="num1">Primer número</label>
			        <input type="text" name="num1" value="@Request.Form["num1"]"  />
			        <label for="num2">Segundo número</label>
                    <input type="text" name="num2" value="@Request.Form["num2"]" />
                    <p>
				        <input type="submit" value="Operar" />
                    </p>
                }
                else
                {
                    <label for="num1">Primer número</label>
                    <input type="text" name="num1" />
                    <label for="num2">Segundo número</label>
                    <input type="text" name="num2" />
                    <p>
                        <input type="submit" value="Operar" />
                    </p>
                }

            </form>

		    <div class="results">
                @{
                    if (Request.Method == "POST")
                    {
                        int num1 = int.Parse(Request.Form["num1"]),
                            num2 = int.Parse(Request.Form["num2"]),
                            totalSum = num1 + num2,
                            totalSub = num1 - num2,
                            totalDiv = num1 / num2,
                            totalMul = num1 * num2;
                        <p>Suma</p>
                        <p>@($"{num1} + {num2} = {totalSum}")</p>
                        <p>Resta</p>
                        <p>@($"{num1} - {num2} = {totalSub}")</p>
                        <p>División</p>
                        <p>@($"{num1} / {num2} = {totalDiv}")</p>
                        <p>Multiplicación</p>
                        <p>@($"{num1} * {num2} = {totalMul}")</p>
                    }
                }
            </div>
        </main>

        <aside>
            <div class="aside-box">
                <h3>Ejercicios</h3>
                <ul>
                    <li><a href="#"> Ejercicio 1</a></li>
                    <li><a href="Ejercicio2"> Ejercicio 2</a></li>
                    <li><a href="Ejercicio3"> Ejercicio 3</a></li>
                    <li><a href="Inicio"> Principal</a></li>
                </ul>
            </div>
        </aside>
    </div>

    <footer>
        <p>19/05/2023 - CIPF César Manrique - Guillermo Afonso Afonso - Curso 2022-2023</p>
    </footer>
</body>

</html>